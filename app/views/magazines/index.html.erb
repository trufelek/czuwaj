<h1>Listing Magazines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @magazines.each do |magazine| %>
      <tr>
        <td><%= magazine.name %></td>
        <td><%= magazine.description %></td>
        <%= image_tag(magazine.picture_url, :width => 200) if magazine.picture.present? %>
        <td><%= magazine.price %></td>


        <td><%= link_to 'Show', magazine %></td>

        <% if can? :update, magazine %>
        <td><%= link_to 'Edit', edit_magazine_path(magazine) %></td>
        <% end %>

        <% if can? :destroy, magazine %>
        <td><%= link_to 'Destroy', magazine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Magazine %>
<%= link_to 'New Magazine', new_magazine_path %>
<% end %>